            function getCategoryIcon(categoryName) {
                let icons = {
                    "Home": "fas fa-home",
                    "Industries": "fas fa-industry",
                    "Apartments": "fas fa-building",
                    "Electronics": "fas fa-laptop",
                    "Clothing": "fas fa-tshirt",
                    "Furniture": "fas fa-couch",
