    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f4f4;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        .dashboard-container {
            width: 100%;
            max-width: 1400px;
            margin: auto;
            padding: 20px;
        }

        .title {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 15px;
            color: #333;
        }

        .welcome-message {
            font-size: 20px;
            margin-bottom: 30px;
            color: #555;
        }

        .category-contain {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 20px;
            padding: 10px;
        }

        .category-card {
            background: #3498db;
            color: white;
            flex: 1 1 calc(30% - 20px);
            min-width: 280px;
            max-width: 400px;
            padding: 25px;
            text-align: center;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            cursor: pointer;
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

            .category-card:hover {
                transform: scale(1.05);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

        .category-icon {
            font-size: 50px;
            margin-bottom: 15px;
        }

        .category-name {
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <br />
    <br />
    <br />
    <div class="dashboard-container">
        <div class="title">Welcome to the Domestic Aid Management System</div>
        <div class="welcome-message">Welcome, @Context.Session.GetString("UserName")</div>

        <div class="category-contain" id="categorys">
            <!-- Static Cards -->
            <div class="category-card" onclick="window.location.href='/AdminMaster/AddCategory'">
                <i class="fas fa-plus-circle category-icon"></i>
                <div class="category-name">Add Category</div>
            </div>
            <div class="category-card" onclick="window.location.href='/AdminMaster/AddEmployees'">
                <i class="fas fa-users category-icon"></i>
                <div class="category-name">Manage Team</div>
            </div>
        </div>
    </div>

