@model DomasticAidManagementSystem.DashBoard
@using System.Text.Json;
@{
    Layout = "~/Views/Shared/_user_layouy.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        .dashboard-container {
            max-width: 900px;
            margin: auto;
            padding: 20px;
            text-align: center;
        }

        .title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .profile-card {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: left;
            margin-bottom: 20px;
        }

            .profile-card h3 {
                margin: 0;
                font-size: 20px;
            }

            .profile-card p {
                margin: 5px 0;
                font-size: 16px;
            }

        .card-container {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .action-card {
            flex: 1;
            background: #fff;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            margin: 10px;
            transition: 0.3s;
            cursor: pointer;
        }

            .action-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

            .action-card i {
                font-size: 40px;
                margin-bottom: 10px;
                color: #007bff;
            }

            .action-card h4 {
                margin: 10px 0;
                font-size: 18px;
            }
    </style>
</head>
<body>
    <br />
    <br />
    <br />

    <div class="dashboard-container">
        <div class="title">Welcome to the Domestic Aid Management System</div>

        <div class="profile-card">
            <h1 style="text-align:center">User Profile</h1>
            <p><strong>Username:</strong> @Context.Session.GetString("UserName")</p>
            <p><strong>Email:</strong> @Context.Session.GetString("Email")</p>
            <p><strong>Phone Number:</strong> @Context.Session.GetString("PhoneNumber")</p>
        </div>

        <div class="card-container">
            <div class="action-card" onclick="location.href='/UserMaster/GetOrderHistory'">
                <i class="fa-solid fa-clock-rotate-left"></i>
                <h4>View History</h4>
            </div>

            <div class="action-card" onclick="location.href='/UserMaster/GetOrderDetails'">
                <i class="fa-solid fa-list"></i>
                <h4>Booked Details</h4>
            </div>

            <div class="action-card" onclick="location.href='/UserMaster/GetOrderDetailsBill'">
                <i class="fa-solid fa-file-invoice-dollar"></i>
                <h4>Generate Bill</h4>
            </div>
        </div>
    </div>
</body>
