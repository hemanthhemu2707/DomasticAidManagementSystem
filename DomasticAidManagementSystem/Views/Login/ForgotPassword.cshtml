@model DomasticAidManagementSystem.LoginRequest

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('/images/bg_1.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            height: 100vh;
            font-family: sans-serif;
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            overflow: hidden;
        }

        @@media screen and (max-width: 600px) {
            body {
                background-size: cover;
                position: fixed;
            }
        }


        .loginBox {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 350px;
            min-height: 200px;
            padding: 20px;
            min-height: 200px;
            border: 2px solid transparent !important; /* Base border */
            border-radius: 15px !important; /* Rounded corners */
            animation: borderAnimation 3s infinite !important; /* Infinite animation */
            background-clip: padding-box !important; /* Prevent gradient overlap with border */
            background-color: rgba(0, 0, 0, 0.2);
        }

        @@keyframes borderAnimation {
            0% {
                border-color: #f39c12; /* Start color */
                box-shadow: 0 0 10px #f39c12;
            }

            50% {
                border-color: #3498db; /* Middle color */
                box-shadow: 0 0 15px #3498db;
            }

            100% {
                border-color: #f39c12; /* End color (same as start) */
                box-shadow: 0 0 10px #f39c12;
            }
        }

        input::placeholder {
            color: #59238F;
            opacity: 1.2;


        }
            .loginBox input {
                width: 100%;
                margin-bottom: 20px;
            }

        .otp-box input {
            width: 50px;
            height: 50px;
            text-align: center;
            font-size: 20px;
            margin-right: 5px;
            margin-left: 6px;
            border: none;
            border-bottom: 2px solid white;
            background: transparent;
            color: white;
        }


        h3 {
            margin: 0;
            padding: 0 0 20px;
            color: white;
            text-align: center;
        }

        .backButton {
            border: none;
            outline: none;
            height: 40px;
            font-size: 16px;
            background: #ff5733;
            color: #fff;
            border-radius: 20px;
            cursor: pointer;
            text-align: center;
            display: block;
            width: 100%;
            margin-top: 10px;
        }

            .backButton:hover {
                background: #ff2e00;
            }

        .loginBox #email,
        .loginBox input[type="password"]:hover {
            color: #42F3FA;
            border: 1px solid #42F3FA;
            box-shadow: 0 0 5px rgba(0, 255, 0, .3), 0 0 10px rgba(0, 255, 0, .2), 0 0 15px rgba(0, 255, 0, .1), 0 2px 0 black;
        }



        .loginBox #email,
        .loginBox input[type="password"] {
            border: none;
            border-bottom: 2px solid #262626;
            outline: none;
            height: 40px;
            color: #fff;
            background: transparent;
            font-size: 16px;
            padding-left: 20px;
            box-sizing: border-box;
        }

            .loginBox #email:hover,
            .loginBox input[type="password"]:hover {
                color: #42F3FA;
                border: 1px solid #42F3FA;
                box-shadow: 0 0 5px rgba(0, 255, 0, .3), 0 0 10px rgba(0, 255, 0, .2), 0 0 15px rgba(0, 255, 0, .1), 0 2px 0 black;
            }

            .loginBox #email:focus,
            .loginBox input[type="password"]:focus {
                border-bottom: 2px solid #42F3FA;
            }

        .inputBox {
            position: relative;
        }

            .inputBox span {
                position: absolute;
                top: 10px;
                color: #262626;
            }

        .loginBox input[type="submit"] {
            border: none;
            outline: none;
            height: 40px;
            font-size: 16px;
            background: #59238F;
            color: #fff;
            border-radius: 20px;
            cursor: pointer;
        }

        .loginBox a {
            color: #262626;
            font-size: 14px;
            font-weight: bold;
            text-decoration: none;
            text-align: center;
            display: block;
        }

    </style>
</head>

<body>
    <div class="loginBox">
        <h3>Forgot Password</h3>
        <div id="step1">
            <input id="email" type="text" placeholder="Enter Email Address" required>
            <button class="backButton" onclick="sendOTP()">Send OTP</button>
        </div>

        <div id="step2" style="display: none;">
            <h3>Enter OTP</h3>
            <div class="otp-box">
                <input type="text" maxlength="1" class="otp-input" oninput="moveNext(0)">
                <input type="text" maxlength="1" class="otp-input" oninput="moveNext(1)" onkeydown="movePrev(event,1)">
                <input type="text" maxlength="1" class="otp-input" oninput="moveNext(2)" onkeydown="movePrev(event,2)">
                <input type="text" maxlength="1" class="otp-input" onkeydown="movePrev(event,3)">
            </div>
            <button class="backButton" onclick="verifyOTP()">Verify</button>
        </div>

        <div id="step3" style="display: none;">
            <h3>Reset Password</h3>
            <input type="password" placeholder="New Password" required>
            <input type="password" placeholder="Confirm Password" required>
            <button class="backButton">Change Password</button>

        </div>
        <button class="backButton" onclick="window.location.href='../Login/Login';">Back to Login</button>

    </div>

    <script>
        function sendOTP() {
            document.getElementById('step1').style.display = 'none';
            document.getElementById('step2').style.display = 'block';
        }

        function verifyOTP() {
            document.getElementById('step2').style.display = 'none';
            document.getElementById('step3').style.display = 'block';
        }

        function moveNext(index) {
            let inputs = document.querySelectorAll('.otp-input');
            if (inputs[index].value.length === 1 && index < inputs.length - 1) {
                inputs[index + 1].focus();
            }
        }

        function movePrev(event, index) {
            let inputs = document.querySelectorAll('.otp-input');
            if (event.key === 'Backspace' && index > 0) {
                inputs[index - 1].focus();
            }
        }
    </script>
</body>

</html>



